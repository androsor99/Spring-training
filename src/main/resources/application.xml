<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>
    <context:property-placeholder location="classpath:application.properties"/>

    <bean class="com.androsor.bpp.InjectBeanPostProcessor"/>
    <bean class="com.androsor.bpp.TransactionBeanPostProcessor"/>
    <bean class="com.androsor.bpp.AuditingBeanPostProcessor"/>

<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="classpath:application.properties"/>-->
<!--    </bean>-->

    <bean class="com.androsor.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="com.androsor.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>

    <bean id="driverId" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <bean id="pool2" class="com.androsor.database.pool.ConnectionPool"/>
    <bean id="pool1" name="p1,p2,p3" class="com.androsor.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" value="${db.username}"/>
        <constructor-arg name="properties" type="java.util.Map">
           <null/>
        </constructor-arg>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="${db.pool.size}"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driverId"/>
            </list>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="${db.url}"/>
                <entry key="password" value="${db.password}"/>
                <entry key="driver" value="#{driverId.substring(3)}"/>
                <entry key="test" value="#{driverId.length() > 10}"/>
                <entry key="test1" value="#{driverId.length() > T(Math).random() * 10}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUser" value="#{systemProperties['user.name']}"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="com.androsor.database.repository.CompanyRepository"/>


</beans>