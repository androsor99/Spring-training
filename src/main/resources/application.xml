<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driverId" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <bean id="pool1" name="p1,p2,p3" class="com.androsor.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" ref="driverId"/>
        <constructor-arg name="properties" type="java.util.Map">
           <null/>
        </constructor-arg>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driverId"/>
            </list>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driverId"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="com.androsor.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>

</beans>